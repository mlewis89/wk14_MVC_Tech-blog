<!-- Loop over each object in the projects array -->
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  {{#each post.comment as |comment| }}
<div class="row mb-4 post">
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
  <div class="col-md-5">
    <p>Created by {{comment.user_id}} on {{format_date comment.date_created}}</p>
  </div>
  
</div>
{{/each}}
  <div class="col-md-7">
    <button id="add-Comment">Leave Comment</button>
  </div>
</div>