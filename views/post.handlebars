<!-- Loop over each object in the projects array -->
<div class="row mb-4 post" data-post-id={{post.id}}>
  <div class="col-md-10">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-12">
    <p>
      {{post.content}}
    </p>
  </div>
  <div class="options">
        <button class="btn btn-primary" id="update-post" >Update Post</button>
        <button class="btn btn-primary" id="delete-post" >Delete Post</button>
      </div>
  <div class="row mb-12 comment-section">
  <div class="col-md-12">
  
  <h4>Comments:</h4>
  <ul class="comments"></ul>
    {{#each post.comments as |comment| }}
      <li class="comment" data-comment-id={{comment.id}}>
        <div class="comment-content">{{comment.content}}</div>
        <div class="comment-data">{{comment.user.name}}, {{format_date comment.date_created}} </div>
      </li>
    {{/each}}
  </ul>
    <form class="form comment-form">
      <div class="form-group">
        <label for="new-comment">Add a comment:</label>
        <input class="form-input" type="text" id="new-comment" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" >Submit Comment</button>
      </div>
    </form>
</div>


      <script src='/js/comment.js'></script>
